<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.details.DrinkDetailsFragment">

    <ImageView
        android:id="@+id/img_drink_details"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="300dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:src="@drawable/ic_add"
        />

    <TextView
        android:id="@+id/tv_name_drink_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_default_name"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_description_drink_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/tv_default_description"
        android:layout_margin="16dp"/>

</LinearLayout>